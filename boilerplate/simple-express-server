const express = require('express')
const app = express()
const port = 3000

app.get('/', (req, res) => {
  res.send('Hello World!')
  //a more robust response
  //res.json({
//       message: 'Success',
//       data: 'Hello World'
//   })
})

app.listen(port, () => {
  console.log(`Example app listening on port ${port}`)
})

//make sure to install epxress i.e. 'npm i express'
